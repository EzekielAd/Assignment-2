<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!--CSS-->
    <link rel='stylesheet' href='/Content/style.css' />
    <link rel='stylesheet' href="/bootstrap/dist/css/bootstrap.min.css" />
    <link rel='stylesheet' href="/@fortawesome/fontawesome-free/css/all.min.css" />
  </head>
  <body>
  
  <header class="mb-auto">
    <!--NavBar!-->
    <nav class="navbar navbar-expand-lg navbar-dark">
      <div class="container-fluid">

      <a class="navbar-brand" href="/"><i class="fa-solid fa-user fa-lg"></i></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">

          <li class="nav-item">
          <% if (title == "Home Page") { %>
            <a class="nav-link active" aria-current="" href="/home">
          <% } else { %>
            <a class="nav-link" href="/home">
          <% } %>
            <i class="fa-solid fa-lg fa-house-user"></i>
            Home</a>
          </li>

            <li class="nav-item">
          <% if (title == "About Us") { %>
            <a class="nav-link active" href="/about">
          <% } else { %>
           <a class="nav-link" href="/about">
          <% } %>
            <i class="fa-solid fa-lg fa-circle-question"></i>
            About us</a>
          </li>
            <li class="nav-item">
          <% if (title == "Contact Us") {%>
            <a class="nav-link active" href="/contact">
          <% } else {%>
            <a class="nav-link" href="/contact">
          <% } %>
            <i class="fa-solid fa-envelope fa-lg"></i>Contact Us</a>
          </li>

          <li class="nav-item">
          <% if (title == "Projects Page") {%>
          <a class="nav-link active" href="/project">
          <% } else {%>
          <a class="nav-link"   href="/project">
          <% } %>
            <i class="fa-solid fa-gears fa-lg"></i>Projects</a>
          
          </li>
        </ul>
      </div>
    </div> 
  </nav>
</header>

<main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <h1><% title %> </h1>        
        <br>
        <table class="table table-bordered table-striped table-hover">
            <tr class="d-flex">
                <th class="text-center col-2">Name</th>
                <th class="text-center col-2">Author</th>
                <th class="text-center col-2">Published</th>
                <th class="text-center col-3">Description</th>
                <th class="text-center col-1">Price</th>
            </tr>
            <% for(let count=0;count<BookList.length;count++) { %>    
            <tr class="d-flex">
                <td class="text-center col-2"><%= BookList[count].Name %></td>
                <td class="text-center col-2"><%= BookList[count].Author %></td>
                <td class="text-center col-2"><%= BookList[count].Published %></td>
                <td class="text-center col-3"><%= BookList[count].Description %></td>
                <td class="text-center col-1"><%= BookList[count].Price %></td>
            </tr>
            <% } %>
        </table>
    </div>
    </div>
</main>

<!--Bottom Nav Bar-->
<nav class="navbar fixed-bottom navbar-dark bg-dark">
  <h6 class="navbar-text text-center mx-auto">&copy; Copyright 2023. All rights Reserved</h6>
  <a class="navbar-brand" href="https://github.com/EzekielAd/Lab1"><i class="fa-brands fa-github"></i></a>
</nav>

<!--Script Files-->
<script src="/Scripts/app.js>"></script>
<script src="/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="/jquery/dist/jquery.min.js"></script>

</div>
  </body>
</html>
